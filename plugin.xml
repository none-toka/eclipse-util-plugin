<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.none.toka.util.handlers.ExplorerOpenHandler"
            commandId="org.none.toka.util.plugin.explorer.open.command">
         <activeWhen>
            <and>
               <count
                     value="1">
               </count>
               <or>
                  <with
                        variable="activePartId">
                     <equals
                           value="org.eclipse.jdt.ui.PackageExplorer">
                     </equals>
                  </with>
                  <with
                        variable="activePartId">
                     <equals
                           value="org.eclipse.ui.navigator.ProjectExplorer">
                     </equals>
                  </with>
               </or>
            </and>
         </activeWhen>
      </handler>
   </extension>
   <extension
         id="org.none.toka.util.plugin.commands"
         name="open util commands"
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.window"
            id="org.none.toka.util.plugin.explorer.open.command"
            name="Open Explorer">
      </command>
   </extension>
   <extension
         id="menu1"
         name="menu1name"
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="org.none.toka.util.plugin.explorer.open.command"
               label="Open Explorer"
               mnemonic="X"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.none.toka.util.plugin.explorer.open.command"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M3+Q">
      </key>
   </extension>


</plugin>
